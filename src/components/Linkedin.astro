<style>
  :root {
    --background: #060d23;
    --github: #fff;
    --white: #fff;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    /* background-color: var(--background); */
    display: flex;
    place-items: center;
    height: 100vh;
  }
  .style-buttons {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: .5rem;
  }
  .style-button {
    width: 3rem;
    height: 3rem;
    border: none;
    /* #218bff / #0969da*/
    background-color: #0969da;
    border-radius: 50%;
    outline: 2px solid #fff;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    place-items: center;
  }
  .style-button:hover {
    outline-offset: 3px;
    transition: all 0.3s;
  }
  .style-button svg {
    transition: all 0.3s;
  }
  .style-button:hover svg {
    transform: scale(1.2);
  }
  .style-button:hover:nth-child(1) {
    background: #fff;
    /* background: radial-gradient(
            circle at 30% 107%,
            #f9f9fa 0%,
            #cfcfce 5%,
            #494949 45%,
            #1f1e1f 60%,
            #000 90%
        );     */
  }
</style>
