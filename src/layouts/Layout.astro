---
import Header from "../components/Header.astro";
import Chat from "../components/Chat.astro";
import Footer from "../components/Footer.astro";
// Supports weights 100-900
import "@fontsource-variable/onest";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={"Portafolio web de Tecnico universitario en programación"} />
    <meta name="author" content="Dante Nicolás Martínez" />
    <meta name="keywords" content="HTML, CSS, JavaScript, programador, frontend, Backend, fullStack, universitario, tecnico " />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
 
  <body class="relative text-black dark:text-white">
    <div class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div>
    <div>
      <Chat />
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light;
  }
  html {
    font-family: "Onest Variable", sans-serif;
    scroll-behavior: smooth;
  }
  body {
    color: rgba(17, 17, 17, 0.9);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
  }
  @media {prefers-reduce-motiom: reduce} {
    html {
      scroll-behavior: auto;
    }
  }
  @media (prefers-color-scheme: dark) {
    body {
      color: rgba(255, 255, 255, 0.9);
    }
  }
</style>
